.fly-in-up {
  position: absolute;
  animation: fly-in-from-up 0.4s cubic-bezier(0.11, 0.65, 0.35, 1.14);
}

.fly-out-up {
  position: absolute;
  animation: fly-out-to-up 0.4s cubic-bezier(0.46, -0.17, 0.91, 0.5);
}

@keyframes fly-in-from-up {
  from {
    top: -100%;
    opacity: 0;
  }

  to {
    top: 50%;
    opacity: 1;
  }
}

@keyframes fly-out-to-up {
  from {
    top: 50%;
    opacity: 1;
  }

  to {
    top: -100%;
    opacity: 0;
  }
}
