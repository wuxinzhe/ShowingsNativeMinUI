.fade-in {
  animation: fade-in 0.6s ease-out;
}

.fade-out {
  animation: fade-out 0.6s ease-in;
}

@keyframes fade-in {
  from {
    opacity: 0;
    display: none;
  }

  to {
    opacity: 1;
    display: block;
  }
}

@keyframes fade-out {
  from {
    opacity: 1;
    display: block;
  }

  to {
    opacity: 0;
    display: none;
  }
}
