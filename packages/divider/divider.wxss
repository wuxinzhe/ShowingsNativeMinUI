/* packages/divider/divider.wxss */

.divider {
  position: relative;
  font-size: 25rpx;
  color: #c0c4cc;
}

.divider::before {
  content: '';
  position: absolute;
  height: 1rpx;
  width: 50rpx;
  top: 50%;
  left: -65rpx;
  background-color: #c0c4cc;
}

.divider::after {
  content: '';
  position: absolute;
  height: 1rpx;
  width: 50rpx;
  top: 50%;
  right: -65rpx;
  background-color: #c0c4cc;
}
