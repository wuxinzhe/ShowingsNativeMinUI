/* plugin/components/modal/modal.wxss */
@import "./../animation/fly.wxss";
@import "./../animation/fade.wxss";

.sh-modal {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 999;
}

.backdrop {
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}

.modal-container {
  display: flex;
  align-items: center;
  flex-direction: column;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 500rpx;
  border-radius: 10rpx;
  min-height: 300rpx;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border: 1rpx solid #dcdfe6;
  z-index: 10;
}

.modal-title {
  font-size: 40rpx;
  color: #303133;
  text-align: center;
  padding: 30rpx 0;
}

.modal-body {
  color: #888;
  text-align: center;
  font-size: 30rpx;
  flex: 1;
  width: 100%;
}

.modal-footer {
  display: flex;
  height: 90rpx;
  width: 100%;
  border-top: 1rpx solid #e4e7ed;
  font-size: 30rpx;
}

.modal-footer-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #909399;
}

.modal-footer-btn:not(:first-child) {
  border-left: 1rpx solid #e4e7ed;
}

.modal-footer-btn:active {
  background-color: #eee;
}
