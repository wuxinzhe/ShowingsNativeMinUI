sh-list, .sh-list {
  width: 100%;
  box-sizing: border-box;
}

.title {
  color: #909399;
  font-size: 25rpx;
  margin: 20rpx 0 10rpx 0;
  padding: 0 20rpx;
}

.title.sm {
  font-size: 25rpx;
}

.title.md {
  font-size: 30rpx;
}

.title.lg {
  font-size: 40rpx;
}

.content {
  position: relative;
}

.content::after, .content::before {
  content: " ";
  position: absolute;
  right: 0;
  left: 0;
  height: 1rpx;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.content::after {
  bottom: 0;
  margin-bottom: -1rpx;
  border-bottom: 1rpx solid #ddd;
}

.content::before {
  top: 0;
  margin-top: -1rpx;
  border-top: 1rpx solid #ddd;
}
