.list-field {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background-color: #fff;
  width: 100%;
  padding-left: 40rpx;
}

.list-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 40rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.list-content::before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 2rpx solid #ddd;
  transform-origin: 0 0;
  transform: scaleY(0.5);
  left: 0;
}

.list-size-sm {
  height: 85rpx;
  font-size: 30rpx;
}

.list-size-md {
  height: 100rpx;
  font-size: 40rpx;
}

.list-size-lg {
  height: 115rpx;
  font-size: 50rpx;
}

.label {
  min-width: 150rpx;
}

.disabled >.label {
  color: #c0c4cc;
}

@font-face {
  font-family: 'iconfont';
  src: url(data:application/font-woff2;charset=utf-8;base64,) format('woff2'),
         url(data:application/font-woff;charset=utf-8;base64,) format('woff');
  font-weight: normal;
  font-style: normal;
}

.icon {
  font-family: 'iconfont';
  font-weight: 500;
  font-style: normal;
}

.icon-arrow-up::after {
  content: '\e62d';
}

.icon-arrow-down::after {
  content: '\e62f';
}

.icon-arrow-left::after {
  content: '\e630';
}

.icon-arrow-right::after {
  content: '\e62e';
}
