    <divider>拼出你的小程序</divider>
  </flex>
  <white-space size='md' />
  <list title='表单控件'>
    <list-item arrow='right' data-page='/pages/input/input' bind:tap='onTap'>Input</list-item>
    <list-item arrow='right' data-page='/pages/cascader/cascader' bind:tap='onTap'>Cascader</list-item>
    <list-item arrow='right' data-page='/pages/select/select' bind:tap='onTap'>Select</list-item>
    <list-item arrow='right' data-page='/pages/switch/switch' bind:tap='onTap'>Switch</list-item>
    <list-item arrow='right' data-page='/pages/radio/radio' bind:tap='onTap'>Radio</list-item>
