  <list title='布局组件'>
    <list-item arrow='right' data-page='/pages/flex/flex' bind:tap='onTap'>Flex</list-item>
    <list-item arrow='right' data-page='/pages/list/list' bind:tap='onTap'>List</list-item>
    <list-item arrow='right' data-page='/pages/divider/divider' bind:tap='onTap'>Divider</list-item>
  </list>
  <list title='交互'>
    <list-item arrow='right' data-page='/pages/modal/modal' bind:tap='onTap'>Modal</list-item>
  </list>
  <list title='其他'>
    <list-item arrow='right' data-page='/pages/badge/badge' bind:tap='onTap'>Badge</list-item>
    <list-item arrow='right' data-page='/pages/portrait/portrait' bind:tap='onTap'>Portrait</list-item>
