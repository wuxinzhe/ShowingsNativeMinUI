/* components/demo/demo.wxss */

.demo-container {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.demo-name {
  font-size: 35rpx;
  color: #606266;
  margin-bottom: 20rpx;
  padding: 5rpx 20rpx;
  border-bottom: 1rpx solid #dcdfe6;
}

.demo-description {
  font-size: 25rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 20rpx;
  border: 1rpx solid #e4e7ed;
  border-radius: 10rpx;
  background-color: #fff;
  color: #606266;
}

.description-title {
  margin-bottom: 10rpx;
  font-style: italic;
  color: #c0c4cc;
  font-size: 30rpx;
}
